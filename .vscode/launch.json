{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "probe-rs-debug",
      "request": "launch",
      "name": "Launch Esp",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "besp",
      "chip": "esp32c6",
      "flashingConfig": {
        "flashingEnabled": true,
        "haltAfterReset": true,
        "formatOptions": {
          "binaryFormat": "idf"
        }
      },
      "coreConfigs": [
        {
          "coreIndex": 0,
          "programBinary": "target/riscv32imac-unknown-none-elf/debug/${workspaceFolderBasename}",
          "rttEnabled": true
        }
      ]
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Native Debug",
      "program": "${workspaceFolder}/target/x86_64-unknown-linux-gnu/debug/${workspaceFolderBasename}",
      "args": [],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "bsg",
      "stopOnEntry": true
    }
  ]
}
